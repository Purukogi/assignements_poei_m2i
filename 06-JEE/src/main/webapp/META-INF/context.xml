<?xml version="1.0" encoding="UTF-8"?>
<Context>
	<Resource
		name="admin"
		driverClassName="com.microsoft.sqlserver.jdbc.SQLServerDriver"
		type="javax.sql.DataSource"
		
		url="jdbc:sqlserver://[DB_URL];databasename=[DB_NAME];trustservercertificate=true"
		username="[USERNAME]"
		password="[PASSWORD]"
		
		maxTotal="100"
		maxIdle="30"
		maxWaitMillis="10000"
	/>
</Context>